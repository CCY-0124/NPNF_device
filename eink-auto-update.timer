[Unit]
Description=Auto update timer for E-ink Display Service
After=network-online.target
Wants=network-online.target

[Timer]
# Run daily at 3:00 AM
OnCalendar=*-*-* 03:00:00
# Also run 15 minutes after boot (to catch updates after reboot)
OnBootSec=15min
# Run immediately if missed
Persistent=true

[Install]
WantedBy=timers.target



